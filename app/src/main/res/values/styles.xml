<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorTextWhitePrimary</item>
        <item name="actionMenuTextColor">@color/colorTextWhiteSecondary</item>
        <item name="colorAccent">@color/colorTextWhiteHint</item>
        <item name="colorControlNormal">@color/colorTextWhitePrimary</item>
        <item name="colorControlActivated">@color/colorTextWhiteSecondary</item>
        <item name="colorControlHighlight">@color/colorTextWhiteSecondary</item>
        <item name="android:textColorHint">@color/colorTextWhiteHint</item>
    </style>
</resources>
